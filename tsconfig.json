{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true     // optional, skips type-checking of all .d.ts files
  },
  "include": ["src/**/*"],   // ← only compile your .ts files under src/
  "exclude": ["node_modules"] // ← explicitly _don’t_ compile TS under node_modules
}
